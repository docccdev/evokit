for name, value in $global-size
    +media-selector('.box_margin_'+name)
        margin: value

    +media-selector('.box_margin-tb_'+name)
        margin-top: value
        margin-bottom: value

    +media-selector('.box_margin-lr_'+name)
        margin-left: value
        margin-right: value

    +media-selector('.box_margin-left_'+name)
        margin-left: value

    +media-selector('.box_margin-top_'+name)
        margin-top: value

    +media-selector('.box_margin-right_'+name)
        margin-right: value

    +media-selector('.box_margin-bottom_'+name)
        margin-bottom: value
